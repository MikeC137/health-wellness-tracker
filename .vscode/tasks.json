{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build HealthWellnessTracker",
            "type": "shell",
            "command": "cl",
            "args": [
                "/EHsc",
                "/Fe:${workspaceFolder}\\bin\\HealthWellnessTracker.exe",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\WellnessTracker.cpp",
                "${workspaceFolder}\\src\\WellnessRecord.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}